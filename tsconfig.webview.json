{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2020",
    "outDir": "out/webview",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "rootDir": "src/webview",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/webview/**/*"],
  "exclude": ["node_modules", ".vscode-test", "out"]
}
