{
  "name": "jsonbro",
  "displayName": "JSONBro",
  "description": "A simple VS Code extension for working with JSON.",
  "version": "0.2.3",
  "publisher": "LucianDCrainic",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonbro.formatJson",
        "title": "JSONBro: Format JSON"
      },
      {
        "command": "jsonbro.diffJson",
        "title": "JSONBro: Diff JSON"
      },
      {
        "command": "jsonbro.openFromActivityBar",
        "title": "Open JSONBro",
        "icon": "$(json)"
      },
      {
        "command": "jsonbro.removeFormatHistory",
        "title": "Remove Entry",
        "icon": "$(trash)"
      },
      {
        "command": "jsonbro.removeDiffHistory",
        "title": "Remove Entry",
        "icon": "$(trash)"
      },
      {
        "command": "jsonbro.renameFormatHistory",
        "title": "Rename Entry",
        "icon": "$(edit)"
      },
      {
        "command": "jsonbro.renameDiffHistory",
        "title": "Rename Entry",
        "icon": "$(edit)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jsonbro",
          "title": "JSONBro",
          "icon": "$(json)"
        }
      ]
    },
    "views": {
      "jsonbro": [
        {
          "id": "jsonbro.explorer",
          "name": "JSONBro",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "jsonbro.openFromActivityBar",
          "when": "view == jsonbro.explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jsonbro.renameFormatHistory",
          "when": "view == jsonbro.explorer && viewItem == formatHistoryEntry",
          "group": "inline@1"
        },
        {
          "command": "jsonbro.removeFormatHistory",
          "when": "view == jsonbro.explorer && viewItem == formatHistoryEntry",
          "group": "inline@2"
        },
        {
          "command": "jsonbro.renameDiffHistory",
          "when": "view == jsonbro.explorer && viewItem == diffHistoryEntry",
          "group": "inline@1"
        },
        {
          "command": "jsonbro.removeDiffHistory",
          "when": "view == jsonbro.explorer && viewItem == diffHistoryEntry",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run compile",
    "compile": "webpack --mode production",
    "compile:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "npm run vscode:prepublish && vsce package",
    "clean": "rimraf out",
    "test": "jest",
    "lint": "echo 'Linting passed - no linter configured yet'",
    "prepackage": "npm test"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.81.0",
    "jest": "^30.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.4.4",
    "typescript": "^5.0.2",
    "vsce": "^2.15.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
